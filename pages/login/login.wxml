<!--login.wxml-->
<view style="position: fixed; z-index: 100; width: 100%;">
  <view class='startBar' style='height:{{startBarHeight}}px'></view>
  <view class='navgation' style='height:{{navgationHeight}}px;'>
    <text class="wenzi">相城绿建堆码系统</text>
  </view>
</view>
<view class="LoginContainer">
  <form bindsubmit="systemLogin">
    <view class="login">登录</view>
    <van-cell-group>
      <van-field label="手机号" name="user_phone" placeholder="请输入手机号" />
      <van-field label="密码" name="password" type="password" placeholder="请输入密码" />
    </van-cell-group>
    <button form-type="submit" style="margin-top:40rpx;" type='primary'>登陆</button>
  </form>
</view>