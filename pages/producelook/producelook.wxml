<view>
  <view class='navigation'>
    <view class='startBar' style='height:{{startBarHeight}}px'></view>
    <view class='navgation' style='height:{{navgationHeight}}px'>
      <view class="wenzi" bindtap="fanhui">返回</view>
    </view>
  </view>

  <view style="margin-top:{{startBarHeight+navgationHeight}}px">
    <view class="title">生产信息查询</view>
    <form bindsubmit="bindsubmit">
      <van-cell-group>
        <van-field label="计划名称" name="input1" placeholder="请输入物料编码" />
        <van-field label="物料编码" name="input2" placeholder="请输入项目名称" />
        <van-radio-group  name='radio1' bind:change="onChange">
          <van-radio name="0">待生产</van-radio>
          <van-radio name="1">已生产</van-radio>
        </van-radio-group>
        <button form-type="submit" style="background-color: #1989fa;" type="primary">查询</button>
      </van-cell-group>
    </form>
  </view>
</view>